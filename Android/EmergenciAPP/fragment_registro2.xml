<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtNombre_R2"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_marginTop="120dp"
            android:autofillHints=""
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtApellidos_R2"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre_R2" />


        <EditText
            android:id="@+id/txtDNI_R2"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:hint="DNI/NIE"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtApellidos_R2" />

        <EditText
            android:id="@+id/selectFechaN_R2"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:background="@drawable/text_redondo"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDNI_R2" />

        <Spinner
            android:id="@+id/selectSexo_R2"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/spinner_redondo"
            android:dropDownWidth="match_parent"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectFechaN_R2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>