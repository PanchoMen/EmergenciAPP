<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/selectGrupoS_R3"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/spinner_redondo"
            android:dropDownWidth="match_parent"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtAlergias_R3"
            android:layout_width="254dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:autofillHints=""
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:gravity="top"
            android:hint="Alergias..."
            android:inputType="textMultiLine"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectGrupoS_R3" />

        <EditText
            android:id="@+id/txtOtrosDatos_R3"
            android:layout_width="254dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:autofillHints=""
            android:background="@drawable/text_redondo"
            android:ems="10"
            android:gravity="top"
            android:hint="Otros datos de interÃ©s..."
            android:inputType="textMultiLine"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAlergias_R3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>